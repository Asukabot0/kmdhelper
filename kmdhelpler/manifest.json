{
  "manifest_version": 3,
  "name": "KMD Helpler",
  "version": "0.1.0",
  "description": "Auto-detect course blocks on webpages and turn them into Google Calendar event links with a one-click add-all button.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["identity", "storage"],
  "host_permissions": ["https://www.googleapis.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://archiver.kmd.keio.ac.jp/*", "http://archiver.kmd.keio.ac.jp/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}


